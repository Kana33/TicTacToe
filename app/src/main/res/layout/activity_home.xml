<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/boadddd"
    android:orientation="vertical"

    tools:context=".home">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="166dp">


        <TextView
            android:id="@+id/Score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:fontFamily="cursive"
            android:freezesText="true"
            android:text="Score: "
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/Jugadorx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Score"
            android:layout_centerHorizontal="true"
            android:fontFamily="cursive"
            android:freezesText="true"
            android:text="X: 0"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/Jugadoro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Jugadorx"
            android:layout_centerHorizontal="true"
            android:fontFamily="cursive"
            android:freezesText="true"
            android:text="O: 0"
            android:textColor="#000000"
            android:textSize="20sp" />

        <Button
            android:id="@+id/newgame"
            android:layout_width="33dp"
            android:layout_height="34dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/reset" />

        <Button
            android:id="@+id/newplay"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/playy"
            android:onClick="playIt"
            />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/button_00"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bot"
            android:freezesText="true"
            android:textColor="#FFFFFF  "
            android:textSize="60sp" />

        <Button
            android:id="@+id/button_01"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/botd"
            android:freezesText="true"
            android:textColor="#FFFFFF  "
            android:textSize="60sp" />

        <Button
            android:id="@+id/button_02"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/butt"
            android:freezesText="true"
            android:textColor="#FFFFFF  "
            android:textSize="60sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/button_10"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/butiz"
            android:freezesText="true"
            android:textColor="#FFFFFF  "
            android:textSize="60sp" />

        <Button
            android:id="@+id/button_11"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#000000"
            android:freezesText="true"
            android:textColor="#FFFFFF  "
            android:textSize="60sp" />

        <Button
            android:id="@+id/button_12"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/butder"
            android:freezesText="true"
            android:textColor="#FFFFFF  "
            android:textSize="60sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/button_20"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/buttt"
            android:freezesText="true"
            android:textColor="#FFFFFF  "
            android:textSize="60sp" />

        <Button
            android:id="@+id/button_21"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/butu"
            android:freezesText="true"
            android:textColor="#FFFFFF  "
            android:textSize="60sp" />

        <Button
            android:id="@+id/button_22"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/butttt"
            android:freezesText="true"
            android:textColor="#FFFFFF  "
            android:textSize="60sp" />


    </LinearLayout>

</LinearLayout>